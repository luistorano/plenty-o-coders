{{!-- Log In Form --}}
<h3 class="center">Log In</h3>
<form class="container login-form center-align">
  <div class="center-align">
    <label for="email-login">Email or Username:</label>
    <input type="text" id="email-login" class="center" />
  </div>
  <div class="center-align">
    <label for="password-login">Password:</label>
    <input type="password" id="password-login" class="center" />
  </div>
  <div>
    <button type="submit" class="btn-large indigo accent-2">Login</button>
  </div>
</form>
