{{!-- Sign Up Form --}}
<h3 class="center">Create Account</h3>
<form class="container signup-form center-align">
  <div class="center-align">
    <label for="username-signup">Username:</label>
    <input type="text" id="username-signup" class="center" />
  </div>
  <div class="center-align">
    <label for="email-signup">Email:</label>
    <input type="text" id="email-signup" class="center"/>
  </div>
  <div class="center-align">
    <label for="password-signup">Password:</label>
    <input type="password" id="password-signup" class="center"/>
  </div>
  <div class="center-align">
    <button type="submit" class="btn-large indigo accent-2">Signup</button>
  </div>
</form>

<script src="/javascript/login.js"></script>